{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist/server",
    "rootDir": "./server",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist"]
}
